@model SocialClub.Models.AspNetRole
@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Admin_Layout.cshtml";
}

<script src="~/Scripts/jquery-1.8.0.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>

<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <!--==========================
      Contact Section
    ============================-->
    @using (Html.BeginForm("AddRoles", "Administration", FormMethod.Post))
    {
<section id="contact" class="section-bg wow fadeInUp">
    <div class="container">

        <div class="h3center">
            <h3>Add Role</h3>
            <div class="separator-breadcrumb border-top"></div>
            @if (TempData["response"] != null)
            {
                <div class="alert alert-success" id="msgalert">
                    @TempData["response"].ToString()
                </div>
            }
        </div>
       
        <div class="row contact-info">

            <div class="form col-md-12">
                <form method="post" role="form" class="contactForm">
                    <div class="form-row">
                        <div class="form-group col-md-3">
                        </div>
                        <div class="form-group col-md-6">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-control-rounded", id = "txtaddrole", placeholder = "Add Role*" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger db" })
                        </div>

                    </div>
                    <div class="text-center "><button class=" btn btn-danger" name="btnAddRole" type="submit">Add Role</button></div>
                </form>
            </div>

        </div>
    </div>
    <p class="lowerlink-r">
        @Html.ActionLink("Back To List", "ListRoles")
    </p>
</section>
    }



<script>
    setTimeout(function () {
        $("#msgalert").hide();
    }, 3500);
</script>

